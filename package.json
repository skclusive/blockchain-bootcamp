{
    "name": "blockchain-bootcamp",
    "version": "1.0.0",
    "description": "blockchain bootcamp using typescript",
    "main": "src/index.js",
    "scripts": {
        "main": "npm run build && ts-node src/index.ts",
        "build": "tsc",
        "lint": "tslint -p .",
        "test": "cross-env NODE_ENV=production TS_NODE_COMPILER_OPTIONS={\\\"module\\\":\\\"commonjs\\\",\\\"declaration\\\":false} jest --runInBand"
    },
    "author": "skclusive <skclusive@outlook.com>",
    "license": "ISC",
    "devDependencies": {
        "@types/jest": "^23.3.0",
        "@types/node": "^10.5.2",
        "cross-env": "^5.2.0",
        "jest": "^23.4.1",
        "ts-jest": "^23.0.1",
        "ts-node": "^7.0.0",
        "tslint": "^5.11.0",
        "tslint-config-prettier": "^1.13.0",
        "tslint-loader": "^3.6.0",
        "typescript": "^2.9.2"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "modulePaths": [
            "<rootDir>/src/"
        ],
        "roots": [
            "<rootDir>/src/"
        ]
    }
}
